	<main>
		<div class="container mt-5">
			<h2 class="small-title">Détails du département</h2>
			<div class="card mb-5">
				<div class="card-body">
					<table class="table">
						<tr>
							<th>ID</th>
							<td>{{ departement.id }}</td>
						</tr>
						<tr>
							<th>Nom</th>
							<td>{{ departement.nom }}</td>
						</tr>
						<tr>
							<th>Archivé</th>
							<td>{{ departement.archive ? 'Oui' : 'Non' }}</td>
						</tr>
						<tr>
							<th>Véhicules</th>
							<td>
								<ul>
									{% for vehicule in departement.vehicules %}
										<li>{{ vehicule.nom }}
											(ID:
											{{ vehicule.id }})</li>
									{% else %}
										<li>Aucun véhicule</li>
									{% endfor %}
								</ul>
							</td>
						</tr>
						<tr>
							<th>Directeur</th>
							<td>{{ departement.directeur ? departement.directeur.nom : 'Non défini' }}</td>
						</tr>

						<tr>
							<th>Utilisateurs</th>
							<td>
								<ul>
									{% for utilisateur in departement.utilisateurs %}
										<li>{{ utilisateur.nom }}
											(ID:
											{{ utilisateur.id }})</li>
									{% else %}
										<li>Aucun utilisateur</li>
									{% endfor %}
								</ul>
							</td>
						</tr>
					</table>
					<a href="{{ path('departement_index') }}" class="btn btn-outline-primary">Retour à la liste</a>
				</div>
			</div>
		</div>
	</main>
