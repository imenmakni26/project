	<main>
		<div class="container mt-5">
			<h2 class="small-title">Liste des Véhicules</h2>
			<div class="card mb-5">
				<div class="card-body">
					<table class="table">
						<thead>
							<tr>
								<th>ID</th>
								<th>Marque</th>
								<th>Modèle</th>
								<th>Année</th>
								<th>Immatriculation</th>
								<th>Numero de serie de caburant</th>
								<th>État</th>
								<th>Description</th>
								<th>Couleur</th>
								<th>Prix</th>
								<th>Numéro de Série</th>
								<th>Kilométrage</th>
								<th>Type</th>
								<th>Dimension de Roue</th>
								<th>Date Dernière Vidange</th>
								<th>Carte de Péage</th>
								<th>Numero d'assurance</th>
								<th>Id Budget</th>
								<th>Archivage</th>
								<th>Historique</th>
								<th>Entretien</th>
								<th>Département</th>
								<th>Responsable de Flotte</th>
								<th>Directeur Commercial</th>
								<th>Directeur</th>
							</tr>
						</thead>
						<tbody>
							{% for vehicule in vehicules %}
								<tr>
									<td>{{ vehicule.id }}</td>
									<td>{{ vehicule.marque }}</td>
									<td>{{ vehicule.modele }}</td>
									<td>{{ vehicule.annee }}</td>
									<td>{{ vehicule.immatriculation }}</td>
									<td>{{ vehicule.numeroSerieCaburant }}</td>
									<td>{{ vehicule.etat }}</td>
									<td>{{ vehicule.description }}</td>
									<td>{{ vehicule.couleur }}</td>
									<td>{{ vehicule.prixVehicule }}</td>
									<td>{{ vehicule.numeroSerie }}</td>
									<td>{{ vehicule.kilometrage }}</td>
									<td>{{ vehicule.type }}</td>
									<td>{{ vehicule.dimensionRoue }}</td>
									<td>{{ vehicule.dateDerniereVidange ? vehicule.dateDerniereVidange|date('d/m/Y') : 'Non spécifiée' }}</td>
									<td>{{ vehicule.cartePeage }}</td>
									<td>{{ vehicule.numeroAssurance }}</td>
									<td>{{ vehicule.idBudget }}</td>
									<td>{{ vehicule.archived ? 'Oui' : 'Non' }}</td>
									<td>
										<ul>
											{% for historique in vehicule.historiques %}
												<li>{{ historique.description }}
													({{ historique.date|date('d/m/Y') }})</li>
											{% else %}
												<li>Aucun historique</li>
											{% endfor %}
										</ul>
									</td>
									<td>
										<ul>
											{% for entretien in vehicule.entretient %}
												<li>{{ entretien.type }}
													({{ entretien.date|date('d/m/Y') }})</li>
											{% else %}
												<li>Aucun entretien</li>
											{% endfor %}
										</ul>
									</td>
									<td>{{ vehicule.departement ? vehicule.departement.nom : 'Non spécifié' }}</td>
									<td>{{ vehicule.responsabledeflotte ? vehicule.responsabledeflotte.nom ~ ' ' ~ vehicule.responsabledeflotte.prenom : 'Non spécifié' }}</td>
									<td>{{ vehicule.directeurCommercial ? vehicule.directeurCommercial.nom ~ ' ' ~ vehicule.direct}}</td>
									<td>{{ vehicule.directeur ? vehicule.directeur.nom ~ ' ' ~ vehicule.direct}}</td>

								</tr>
							{% endblock %}
