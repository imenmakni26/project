	<main>
		<div class="container mt-5">
			<h2 class="small-title">Details de vehicule</h2>
			<div class="card mb-5">
				<div class="card-body">
					<table class="table">
						<tr>
							<th>ID</th>
							<td>{{ vehicule.id }}</td>
						</tr>
						<tr>
							<th>Marque</th>
							<td>{{ vehicule.marque }}</td>
						</tr>
						<tr>
							<th>Modèle</th>
							<td>{{ vehicule.modele }}</td>
						</tr>
						<tr>
							<th>Année</th>
							<td>{{ vehicule.annee }}</td>
						</tr>
						<tr>
							<th>Immatriculation</th>
							<td>{{ vehicule.immatriculation }}</td>
						</tr>
						<tr>
							<th>Numéro Série Carburant</th>
							<td>
								{% if vehicule.NumSerieCarburant %}
									{{ vehicule.NumSerieCarburant.numserie }}
								{% else %}
									Non défini
								{% endif %}
							</td>
						</tr>
						<tr>
							<th>État</th>
							<td>{{ vehicule.etat }}</td>
						</tr>
						<tr>
							<th>Description</th>
							<td>{{ vehicule.description }}</td>
						</tr>
						<tr>
							<th>Couleur</th>
							<td>{{ vehicule.couleur }}</td>
						</tr>
						<tr>
							<th>Prix</th>
							<td>{{ vehicule.prixVehicule }}
								€</td>
						</tr>
						<tr>
							<th>Numéro Série</th>
							<td>{{ vehicule.NumeroSerie }}</td>
						</tr>
						<tr>
							<th>Kilométrage</th>
							<td>{{ vehicule.kilometrage }}
								km</td>
						</tr>
						<tr>
							<th>Type</th>
							<td>{{ vehicule.type }}</td>
						</tr>
						<tr>
							<th>Dimension de la Roue</th>
							<td>{{ vehicule.dimensionRoue }}
								cm</td>
						</tr>
						<tr>
							<th>Date Dernière Vidange</th>
							<td>{{ vehicule.dateDerniereVidange|date('d/m/Y') }}</td>
						</tr>
						<tr>
							<th>Carte de Péage</th>
							<td>{{ vehicule.cartePeage }}</td>
						</tr>
						<tr>
							<th>Numéro d'Assurance</th>
							<td>
								{% if vehicule.NumeroAssurance %}
									{{ vehicule.NumeroAssurance.numero }}
								{% else %}
									Non défini
								{% endif %}
							</td>
						</tr>
						<tr>
							<th>Budget</th>
							<td>
								{% if vehicule.idBudget %}
									{{ vehicule.idBudget.montantAlloue }}
									€
								{% else %}
									Non défini
								{% endif %}
							</td>
						</tr>
						<tr>
							<th>Archivé</th>
							<td>{{ vehicule.archived ? 'Oui' : 'Non' }}</td>
						</tr>
						<tr>
							<th>Historique</th>
							<td>
								<ul>
									{% for historique in vehicule.historiques %}
										<li>{{ historique.date|date('d/m/Y') }}:
											{{ historique.description }}
											(Coût:
											{{ historique.cout }}
											€)</li>
									{% else %}
										<li>Aucun historique</li>
									{% endfor %}
								</ul>
							</td>
						</tr>
						<tr>
							<th>Entretien</th>
							<td>
								{% if vehicule.Entretient %}
									{{ vehicule.Entretient.id }}
								{% else %}
									Aucun entretien
								{% endif %}
							</td>
						</tr>
						<tr>
							<th>Département</th>
							<td>
								{% if vehicule.departement %}
									{{ vehicule.departement.nom }}
									(ID:
									{{ vehicule.departement.id }})
								{% else %}
									Aucun département
								{% endif %}
							</td>
						</tr>
						<tr>
							<th>Responsable de flotte</th>
							<td>
								{% if vehicule.responsabledeflotte %}
									{{ vehicule.responsabledeflotte.nom }}
									(ID:
									{{ vehicule.responsabledeflotte.id }})
								{% else %}
									Aucun responsable de flotte
								{% endif %}
							</td>
						</tr>
						<tr>
							<th>Directeur Commercial</th>
							<td>
								{% if vehicule.directeurCommercial %}
									{{ vehicule.directeurCommercial.nom }}
									(ID:
									{{ vehicule.directeurCommercial.id }})
								{% else %}
									Aucun directeur commercial
								{% endif %}
							</td>
						</tr>
						<tr>
							<th>Directeur</th>
